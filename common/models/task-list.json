{
  "name": "TaskList",
  "plural": "tasks_lists",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "authorized_group": {
      "type": "integer",
      "required": true,
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "tasks": {
      "type": "hasMany",
      "model": "Task",
      "foreignKey": "taskId"
    },
    "authorized_group": {
      "type": "belongsTo",
      "model": "Group",
      "foreignKey": "authorized_group"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {},
  "scope": {
    "include":"tasks"
  }
}
